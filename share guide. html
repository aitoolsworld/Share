<script>
  // Initialize ads
  (adsbygoogle = window.adsbygoogle || []).push({});

  // Share recommendations based on user's selections
  const recommendations = {
    intraday: {
      bullish: {
        low: "Consider Bluechip stocks like Reliance, HDFC Bank with tight stop losses.",
        medium: "Momentum picks: Tata Motors, Bajaj Finance breaking recent highs.",
        high: "Volatile small caps breaking out: InterGlobe, Adani Ports."
      },
      bearish: {
        low: "Conservative short positions on Pharma and FMCG sectors.",
        medium: "Look for breakdowns in NBFCs like Muthoot Finance.",
        high: "Aggressive short intraday trades on loss-making small caps."
      },
      sideways: {
        low: "Focus on dividend payers like ITC with low volatility.",
        medium: "Range trading in large cap stocks like Infosys.",
        high: "Options strategies, iron condors for premium capture."
      },
      volatile: {
        low: "Defensive buys in healthcare, FMCG sectors.",
        medium: "Swing trade from oversold stocks like ICICI Bank.",
        high: "Scalp volatile momentum shifts in energy stocks."
      }
    },
    shortTerm: {
      bullish: {
        low: "Quality stocks like Nestle, HUL showing steady uptrend.",
        medium: "Select emerging leaders in IT and infrastructure.",
        high: "High beta stocks like Reliance Industries aiming for breakout."
      },
      bearish: {
        low: "Avoid heavy selling sectors, maintain cash reserves.",
        medium: "Short selling cyclical stocks vulnerable to downturn.",
        high: "Look for breakdowns in metal and auto sectors."
      },
      sideways: {
        low: "Focus on dividend achievers and bond market ETFs.",
        medium: "Excavate value in IT and pharma range-bound stocks.",
        high: "Use options to hedge uncertainty and generate income."
      },
      volatile: {
        low: "Shift to gold ETFs and defensive mutual funds.",
        medium: "Swing trades capitalizing on volatility in infra stocks.",
        high: "Aim for quick intraday breakouts in small/midcaps."
      }
    },
    longTerm: {
      bullish: {
        low: "Bluechip dividend aristocrats: HDFC, TCS, Infosys.",
        medium: "Growth companies in renewable energy and tech.",
        high: "Small-cap multibagger potential poised for breakthrough."
      },
      bearish: {
        low: "Focus on fixed income and large cap safe havens.",
        medium: "Reduce exposure in cyclical sectors, hold cash.",
        high: "Hedge portfolio with inverse ETFs and gold."
      },
      sideways: {
        low: "Balanced portfolio with bonds & equity mix.",
        medium: "Diversify into ETFs tracking stable sectors.",
        high: "Opportunistic buys during consolidation phases."
      },
      volatile: {
        low: "Stay defensive, increase allocation in safe assets.",
        medium: "Use dollar-cost averaging into quality stocks.",
        high: "Active trading in tech and healthcare sectors."
      }
    }
  };

  const form = document.getElementById("recommendationForm");
  const result = document.getElementById("result");

  form.addEventListener("submit", e => {
    e.preventDefault();
    const investmentType = form.investmentType.value;
    const marketCondition = form.marketCondition.value;
    const riskTolerance = form.riskTolerance.value;

    if (!investmentType || !marketCondition || !riskTolerance) {
      result.textContent = "Please select all options to get a recommendation.";
      return;
    }

    // Fetch recommendation based on the selections
    const rec = recommendations[investmentType]?.[marketCondition]?.[riskTolerance];

    result.textContent = rec || "No recommendation available for the selected combination.";
  });
</script>

